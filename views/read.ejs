<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>
<body>
<div class="w-full h-full bg-zinc-900 p-10 text-white">
    <a class=" text-blue-600" href="/">Back To Home</a>
<h1 class="text-3xl tracking tighter mb-3">All users</h1>

<div class="users flex gap-3 flex-wrap">
<% users.forEach(function(user) { %>
    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
        <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
            <img src="<%= user.image %>" alt="User Image" class="w-full h-full object-cover rounded-lg">
        </div>
        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
        <h5 class="text-zinc-500"><%= user.email %></h5>
        <div class="flex gap-3 mt-10">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit user</a>
            <a class="text-red-400" href="/delete/<%= user._id %>">Delete user</a>
        </div>
    </div>
<% }) %>
</div>
</div>
</body>
</html>